import java.util.*;
public class Recursion{
public static void main(String[] args){
Scanner sc1=new Scanner(System.in);
System.out.print("enter a no:\n");
int n=sc1.nextInt();
int r=fact(n);
System.out.print("Factorial:"+r+"\n");
}
public static int fact(int n){
if ((n==0)||(n==1)){
return n;
}
else if(n>1){
return n*fact(n-1);
}
else{
return 0;
}
}
}
